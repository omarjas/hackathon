<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_shake_it"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alan_birchler.shakeitup.ShakeItActivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="187dp"
        android:id="@+id/output"
        android:textSize="30sp" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:id="@+id/switch1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="2 Flavors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flavors2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignEnd="@+id/output" />

    <TextView
        android:text="3 Flavors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flavors3"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:layout_alignBottom="@+id/switch1"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Re-Shake"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/reshake"
        android:onClick="shakeItUp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_format"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView6"
        android:textSize="18sp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstflavor"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/output"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mixedflavor"
        android:layout_marginBottom="19dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_above="@+id/reshake"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondflavor"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_alignBottom="@+id/output"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thirdflavor"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:layout_below="@+id/output"
        android:layout_alignStart="@+id/mixedflavor"
        android:layout_marginTop="17dp" />

    <TextView
        android:text="To Get..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:layout_below="@+id/thirdflavor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:text="Mix:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        android:layout_alignBottom="@+id/output"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />
</RelativeLayout>
