<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alan_birchler.shakeitup.MainActivity">

    <Button
        android:text="What's On the Menu?"
        android:onClick="menu"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:id="@+id/menubutton"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white" />

    <Button
        android:text="@string/shake"
        android:onClick="shake"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/shakebutton"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/menubutton"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_light"
        android:textColor="@android:color/white" />

    <TextView
        android:text="Deet's Hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deetshours"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/shakebutton"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="36sp" />

    <TextView
        android:text="Weekdays:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekdays"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_below="@+id/deetshours"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Weekends:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekends"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        android:textAlignment="center"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/weekdaystime"
        android:layout_alignStart="@+id/weekdays"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="7:30 AM to 12 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekdaystime"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_below="@+id/weekdays"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="10 AM to 12 AM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weekendstime"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_below="@+id/weekends"
        android:layout_alignEnd="@+id/shakebutton"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
